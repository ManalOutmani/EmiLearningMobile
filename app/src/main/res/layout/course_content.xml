<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="300dp"
    android:background="@drawable/background"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="189dp"
        android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_editCourse"
        android:text="Edit Course"
        android:textColor="@color/colorBlue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="5dp"
        android:visibility="gone"

        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_createAssignment"
            android:text="Create Assignment"
            android:gravity="end"
            android:textColor="@color/colorRed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            />

    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:textAlignment="center">
                    <ImageView
                        android:id="@+id/image_main"
                        android:layout_gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/blue"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/content_courseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="20dp"
                        android:text="course name"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceLarge"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/content_coursePeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="course period"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:textAppearance="?android:attr/textAppearanceMedium"

                            />

                        <TextView
                            android:id="@+id/content_courseTeacher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="end"
                            android:text="course teacher"
                            android:textSize="16dp"

                            android:textColor="@color/black"
                            android:textAppearance="?android:attr/textAppearanceSmall" />



                    </LinearLayout>


                    <TextView
                        android:id="@+id/content_courseId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="course id"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:visibility="gone"

                        />


                </LinearLayout>
        <Button
            android:id="@+id/btnpdf"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="support de cours"
            android:layout_gravity="bottom"
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            android:textSize="10dp"

            android:background="@drawable/roundcorners"/>






    </androidx.cardview.widget.CardView>


</LinearLayout>